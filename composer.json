{
    "name": "rifat/request-validator",
    "description": "PHP Laravel like standalone validation library",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\RequestValidator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
        "App\\RequestValidator\\Tests\\": "tests"
    }
  },
    "authors": [
        {
            "name": "rifat",
            "email": "rifatcse09@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "opsway/psr12-strict-coding-standard": "dev-master",
        "phpunit/phpunit": "^10.2@dev",
        "php-coveralls/php-coveralls": "dev-master"
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "vendor\\bin\\phpunit",
        "phpunit": "vendor/bin/phpunit",
        "coverage-test": "vendor\\bin\\phpunit --coverage-html /test-reports/coverage"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
